<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.xhan.musicplayer.feature.list.ListFragment"
        android:label="Music Player">
        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_up_fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_down_fade_out" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.xhan.musicplayer.feature.detail.DetailFragment"
        android:label="Now Playing" />

</navigation>